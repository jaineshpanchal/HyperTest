{
  "name": "hypertest-monorepo",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "pnpm -r run build",
    "clean": "pnpm -r run clean || true",
    "lint": "pnpm -r run lint",
    "typecheck": "pnpm -r run typecheck",
    "verify": "pnpm typecheck && pnpm lint && echo 'âœ” verify passed'",
    "dev:dashboard": "pnpm --filter @hypertest/dashboard dev",
    "hypertest": "node packages/cli/dist/bin/hypertest.js"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "examples/*"
  ],
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "^9.9.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3"
  }
}